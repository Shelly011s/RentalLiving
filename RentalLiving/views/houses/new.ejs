<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add details of house for rent</h1>
        <div style="width: 30%; margin: 25px auto;" class="border border-primary border-2 bg-light rounded p-3 mt-2 mb-2 bg-light">
            <form action="/houses" method="POST" enctype="multipart/form-data">
                <div class="form-group mb-2">
                    <input class="form-control" type="text" name="house[name]" placeholder="name">
                </div>
                <div class="form-group mb-2">
                    <input class="form-control" type="number" name="house[price]" placeholder="price">
                </div>    
                <div class="form-group mb-2">
                    <input class="form-control" type="text" name="house[location]" placeholder="location">
                </div>            
                <div class="form-group mb-2">
                    <label for="image">Upload 3 images of your place</label>
                    <input  class="form-control" type="file" id="image" name="image[]" accept="image/*" multiple required/>
                </div>
                <div class="form-group mb-2">
                    <input class="form-control" type="text" name="house[description]" placeholder="description">
                </div>
                <div class="form-group mb-2">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/houses">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

