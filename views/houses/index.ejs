<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         
            <div id="myCarousel" class="carousel slide mb-5 mt-5 " data-bs-ride="carousel">
                <!-- Carousel indicators -->
                <ol class="carousel-indicators">
                    <li data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"></li>
                    <li data-bs-target="#myCarousel" data-bs-slide-to="1"></li>
                    <li data-bs-target="#myCarousel" data-bs-slide-to="2"></li>
                </ol>
                
                <!-- Wrapper for carousel items -->
                <div class="carousel-inner border rounded-3 border-success" >
                    <div class="carousel-item active ">
                        <img src="https://bit.ly/3q1TFHI" class="d-block w-100" style="max-height: 300px; object-fit: cover;" alt="Slide 1">
                        <div class="carousel-caption d-none d-md-block">
                            <h1>Welcome To RentalLiving!</h1>
                            <p class="text-dark">Rent a house of your choice!!!</p>                            
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="https://bit.ly/3n1u7Ze" class="d-block w-100" style="max-height: 300px; object-fit: cover;" alt="Slide 2">
                        <div class="carousel-caption d-none d-md-block">                            
                            <p class="text-dark">Want to rent out your place??</p>
                            <p>
                                <a class="btn btn-success btn-large" href="/houses/new">Add New Place to Rent</a>
                            </p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="https://bit.ly/3JRYgnK" class="d-block w-100"style="max-height: 300px; object-fit: cover;" alt="Slide 3">
                    </div>
                </div>
            </div>            
         
     </header>
          
     <div class="row text-center m-auto" style="display:flex; flex-wrap: wrap;">
        <% houses.forEach(function(house){ %>
            <div class="col-md-3 col-sm-6 border rounded-3 border-success p-0 me-3 bg-light">
                <div class="thumbnail border rounded-3">
                    
                   <img src="<%= house.image[0] %>">
                   <div class="caption p-2">
                       <h5 class="float-end">â‚¹<%= house.price %></h5>
                       <h4 class="text-start"><%= house.name %></h4>                       
                       <h5>
                        <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                        <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
                        </svg>
                           <%= house.location %></h5>
                   </div>
                   <p>
                       <a href="/houses/<%= house._id %>" class="btn btn-success">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
    
</div>


<% include ../partials/footer %>
